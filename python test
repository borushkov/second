board = [[" ", 0, 1, 2], [0,"-" , "-", "-"],  [1,"-" , "-", "-"],  [2,"-" , "-", "-"]]
occupied_positions=[]
counter=0
flag = 0
def verification_victory():
    if board[1][1] == board[1][2] and board[1][1]==board[1][3] and board[1][1]!="-":
        return board[1][1]
    if board[2][1] == board[2][2] and board[2][1]==board[2][3] and board[2][1]!="-":
        return board[2][1]
    if board[3][1] == board[3][2] and board[3][1]==board[3][3] and board[3][1]!="-":
        return board[3][1]
    if board[1][1] == board[2][1] and board[1][1]==board[3][1] and board[1][1]!="-":
        return board[1][1]
    if board[1][2] == board[2][2] and board[1][2]==board[3][2] and board[1][2]!="-":
        return board[1][2]
    if board[1][1] == board[2][2] and board[1][1]==board[3][3] and board[1][1]!="-":
        return board[1][1]
    if board[1][3] == board[2][2] and board[1][3]==board[3][1] and board[1][3]!="-":
        return board[1][3]
    return 1
        
     # Функция проверки победы
def draw_board():
    for i in board:
        print(*i)
print("Крестики Нолики")
print("Укажите координаты как вы будете ходить,в формате двух значений(1-горизонтальная ось 2-вертикальная).К примеру координаты (0,2) будут находиться в правом верхнем углу")
while flag == 0:
    pin = ""
    if counter%2==0:
        print("Ходят крестики")
        pin = "X"
    if counter%2!=0:
        print("Ходят нолики")
        pin = "O"
    print("Как вы будете ходить?(указать координаты:)")
    x, y=int(input()), int(input())
    if x > -1 and x <3 and y>-1 and y<3:
        if str(x)+str(y) not in occupied_positions:
            occupied_positions.append(str(x)+str(y))
            board[x+1][y+1]=pin 
            print(draw_board())
            counter+=1
        else:
            print("Упс кажется эта клетка уже занята выберите другую")
    else:
        print("Вы ввели недопустимые координаты, попробуйте еще раз")
    if counter >= 5:
        if verification_victory() != 1:
            print("Победитель:", verification_victory())
            flag =1
            break
    if counter == 9:
        print("Ничья")
        flag=1
        break


    

    






        


